import java.util.Scanner;

public class ValidacionPassword {
    public static void main(String[] args) {
        
        Scanner consola = new Scanner(System.in);
        int opcion = 0;
        String user;
        String password; //Password valido si tiene 6 carcteres o mas 

        while (opcion !=2){
            System.out.print("""
                    *** Menu de Creacion de Cuentas ***
                    1. Crear cuenta nueva
                    2. Salir de la creacion de cuentas
                    Seleccione una opcion: """);

                    opcion = Integer.parseInt(consola.nextLine());

                    switch (opcion){

                        case 1 -> {
                            System.out.print("Crea un nombre de usuario: ");
                            user = consola.nextLine();

                            do { 
                                System.out.print("Ahora crea una password vallida (debe de contener 6 carcateres): ");
                                password = consola.nextLine();

                                if (password.length() < 6){
                                    System.out.println("Password inválido, vuelva a intentarlo ");
                                }
                                
                            } while (password.length() < 6);
                            System.out.println("\nCuenta creada, bienvenido " + user);
                        }

                        case 2 -> System.out.println("\nSaliendo de la creacion de cuenta... ");

                        default -> System.out.println("opcion inválida, seleccione una opcion válida ");
                    }
                    System.out.println("");
        }
        consola.close();
    }
}
