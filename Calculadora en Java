import java.util.Scanner;

public class Calculadora {
    
    public static void main(String[] args) {

        int opcion = 0;
        double operadorUno;
        double operadorDos;
        Scanner consola = new Scanner(System.in);
        

        while (opcion !=5){
            System.out.print("""
                    *** Calculadora ***
                    Opciones: 
                    1. Suma
                    2. Resta 
                    3. Multiplicacion 
                    4. Division 
                    5. Salir 
                    Seleciona una opcion: """);

                    opcion = Integer.parseInt(consola.nextLine());

                    switch(opcion){

                        case 1 -> {
                            System.out.print("Tu operador uno es: ");
                            operadorUno = Double.parseDouble(consola.nextLine());
                            
                            System.out.print("Tu operador dos es: ");
                            operadorDos = Double.parseDouble(consola.nextLine());

                            double resultadoSuma = operadorUno + operadorDos; //SUMA
                            System.out.print("La suma de tus operadores es: " +resultadoSuma);
                        }

                        case 2 -> {
                            System.out.print("Tu operaodr uno es: ");
                            operadorUno = Double.parseDouble(consola.nextLine());

                            System.out.print("Tu operador dos es: ");
                            operadorDos = Double.parseDouble(consola.nextLine());

                            double resultadoResta = operadorUno - operadorDos; //Resta
                            System.out.println("La resta de tus dos operadores es de: " + resultadoResta);
                          
                        }

                        case 3 -> {
                            System.out.print("Tu operador uno es: ");
                            operadorUno = Double.parseDouble(consola.nextLine());

                            System.out.print("Tu operador dos es: ");
                            operadorDos = Double.parseDouble(consola.nextLine());

                            double resultadoMultiplicacion = operadorUno * operadorDos; //Multiplicacion 
                            System.out.println("La multiplicacion de tus dos operadores es: " + resultadoMultiplicacion);

                        }

                        case 4 -> {
                            System.out.print("Tu operador uno es: ");
                            operadorUno = Double.parseDouble(consola.nextLine());

                            System.out.print("Tu operador dos es: ");
                            operadorDos = Double.parseDouble(consola.nextLine());

                            double resultadoDivision = operadorUno / operadorDos;
                            if (operadorDos == 0) {
                                System.out.println("Error, no se puede dividir entre cero ");
                            }
                            else{
                                 System.out.println("La division de tus operadores es de: " + resultadoDivision);
                            }
                           
                        }

                        case 5 -> System.out.println("Saliendo de la calculadora...");

                        default -> System.out.println("Opcion invalida, ingresa una opcion valida ");
                    }
                    System.out.println("");
        }
        consola.close();        
    }
}
